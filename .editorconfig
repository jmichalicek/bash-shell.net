[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
max_line_length = 120
indent_style = space
indent_size = 4
# isort settings
line_length = 120
skip = {{ project_name }}/settings.py
known_django = django
sections = FUTURE,STDLIB,DJANGO,THIRDPARTY,FIRSTPARTY,LOCALFOLDER

[Makefile]
indent_style = tab

[*.go]
max_line_length = 120
indent_style = tab
indent_size = 2
